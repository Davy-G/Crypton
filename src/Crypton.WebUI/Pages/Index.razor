@page "/"
@inject CookieAuthenticationStateProvider Auth

<PageTitle>Index</PageTitle>

<AuthorizeView>
    <Authorized>
        <h1>Welcome back, @context.User.Identity?.Name</h1>
    </Authorized>
    <NotAuthorized>
        <h1>Hello new user</h1>
    </NotAuthorized>
</AuthorizeView>

<div class="fs-5 mb-3">
    <p>dashboard here</p>
</div>

<button class="btn btn-outline-primary" @onclick="Login">
    Login
</button>

<button class="btn btn-outline-danger" @onclick="Throw">
    Throw
</button>

<Themed>
    <Light>light theme</Light>
    <Dark>dark theme</Dark>
</Themed>

@code
{
    public async Task Login()
    {
        await Auth.LoginAsync();
    }

    public void Throw()
    {
        throw new Exception("Test exception");
    }
}
